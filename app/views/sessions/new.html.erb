<h1>Log In</h1>
     <p id="alert"><%= alert %></p>
      <%= form_tag sessions_path do %>
        <div class="field form-group">

          <%= text_field_tag :email, params[:email], class:"form-control", placeholder:"Email" %>
        </div>
        <div class="field form-group">
          <%= password_field_tag :password, nil, class:"form-control", placeholder:"Password" %>
        </div>
        <div class="actions">
          <%= submit_tag "Log In", class: "btn btn-success", id:"lg" %>
        </div>
     <p>Already Logged In?</p><%= link_to 'Order Now', new_order_path, class:"btn btn-success" %>
      <% end %>

