<h1>The Menu</h1>
  <div class="table-responsive">
    <table class="table">
      <% @products.each do |p| %>
        <p><%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, add_product_path(p), method: 'post' %> <%= p.name %><th> - </th><strong><%= p.description %></strong><hr></p>
      <% end %>
    </table>
  </div>

