<h1>Sign Up</h1>
<%= form_for @customer do |f| %>
  <% if @customer.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @customer.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>
  <div class="field form-group">
    <%= f.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>
    <div class="field form-group">
    <%= f.text_field :phone_number, class:"form-control", placeholder:"Phone Number" %>
  </div>
  <div class="field form-group">
    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
  </div>
  <div class="field form-group">
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password Confirmation" %>
  </div>
  <div class="actions"><%= f.submit class:"btn btn-default" %></div>
  <p class="help-block">You will be auutomatically logged in after signing up</p>
<% end %>
