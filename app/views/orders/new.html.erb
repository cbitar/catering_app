
<div class="container container-od" id="odindex">
  <!-- Content here -->
<h1>Start Your Order</h1>
<%= form_for @order do |f| %>
  <% if @order.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @order.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- adjust to number of guests in order model -->

  <p class="help-block">You Must Select a Date Before Moving On</p>
  <div class="field container-fluid newod ">
    <%= f.label :delivery_date, "Delivery Date & Time", placeholder:"Delivery Date & Time" %>
    <div class="form-group col-xs-4">
      <div id="dt-picker" class="input-group date">
        <%= f.text_field :delivery_date, value: @order.delivery_date, class: "form-control" %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#dt-picker').datetimepicker({defaultDate: Date.now()});
        });
    </script>
  </div>
    <div class="field col-xs-4">
    <%= f.label :location, "Delivery Address", placeholder: "Delivery Address", class:"add row" %>
    <%= f.text_field :location, class: "form-control deladdress row"  %>
  </div>
    <p class="help-block">Leave Blank for Pick Up</p>
  <div class="actions"><%= f.submit class:"btn btn-success pull-left" %></div>




<% end %>
</div>
